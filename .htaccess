RewriteEngine On

# 1. Routing Logic (Points to public/index.php )
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/index.php?url=$1 [QSA,L]

# Deny access to database backups
<Files "*.sql">
    Require all denied
</Files>

# Deny access to configuration files
<Files "config/*.php">
    Require all denied
</Files>

